                    {{/each}}
                </div>
                <div id="ingredient-amount">
                    {{#each amounts}}
                        <p id="amount" class="amount"> {{ this }} </p>
                    {{/each}}
                </div>
                -->
                <div id="ingredient">
                    {{#each ingredients}}
                        <p id="ingredient-name" class="ingredient-name"> {{ this.item }} : {{ this.amount }}</p>
                    {{/each}}
                </div>
                
            </div>

        </div>

    </div>
</div>