<div class="recipe">

    <div id="info" class="info">
        {{#if image}}
        <div id="food-pic">
            <img src="images/{{image}}" class="icon">
        </div>
        {{else}}
        <div id="food-pic">
            <img src="images/foodie.jfif" class="icon">
        </div>
        {{/if}}

        <div id="food-info">
            <p id="recipename" class="recipename"> recipe name: {{recipename}} </p>
            <p id="owner" class="owner"> owner: {{owner}} </p>
            <p id="minutes" class="minutes"> minutes: {{minutes}} </p>
            <p id="seconds" class="seconds"> seconds: {{seconds}} </p>
            <p id="ingredientname"> ingredients:</p>
            <div id="ingredient-info">
