{{#if error_msg}}
<div>
  <div>
    <h6><strong style="color:red; white-space:pre;">{{error_msg}}</strong></h6>
  </div>
</div>
{{/if}}

{{#if success_msg}}
<div>
  <div>
    <h6><strong style="color:green; white-space:pre;">{{success_msg}}</strong></h6>
  </div>
</div>
{{/if}}

{{#if search_error}}
<div>
  <div>
    <h6><strong style="color:red; white-space:pre;font-size:large">{{search_error}}</strong></h6>
  </div>
</div>
{{/if}}